<%- model_class = Indicator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<p>
  <strong><%= t('app.common.ind_category') %>:</strong>
  <%= @indicator.name %>
</p>

<p>
  <strong><%= t('app.common.value') %>:</strong>
  <%= @indicator.name %>
</p>

<p>
  <strong><%= t('app.common.name') %>:</strong>
  <%= @indicator.name %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              indicators_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_indicator_path(@indicator), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              indicator_path(@indicator),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
	<%= link_to t('app.buttons.admin'), admin_path,
  :class => 'btn' %>
</div>
