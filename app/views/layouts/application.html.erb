<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? "#{yield(:title)} > #{t('app.common.app_name')}" :
				t('app.common.app_name') %></title>
    <%= csrf_meta_tags %>
	  <%= include_gon %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
    <!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
    <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'images/favicon.ico', :rel => 'shortcut icon' %>
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <%= link_to(t('app.common.app_name'), root_path(:locale => I18n.locale),:class=>"brand")%>
          <div class="container nav-collapse">
            <ul class="nav">
              <% if @political_parties_nav && !@political_parties_nav.empty? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <%= t('app.common.pol_party')%>
                      <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% @political_parties_nav.each do |pol| %>
                  <li><%= link_to pol.name, political_party_statements_path(pol.permalink)%></li>
                  <% end %>
                </ul>
              </li>
              <% end %>
              <% if @economic_categories_nav && !@economic_categories_nav.empty? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <%= t('app.common.ec_category')%>
                      <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% @economic_categories_nav.each do |ec| %>
                  <li><%= link_to ec.name, economic_category_statements_path(ec.permalink)%></li>
                  <% end %>
                </ul>
              </li>
              <% end %>
              <% if user_signed_in? %>
                <li class="navbar-text">
     		         <%= current_user.email %>
  							</li>
                <li>
     		         <%= link_to t('.admin'), admin_path %>
  							</li>
                <li>
     		         <%= link_to t('.sign_out'), destroy_user_session_path, :method => :delete %>
  							</li>
              <% end %>
            </ul>

            <ul class="nav pull-right">
  						<% I18n.available_locales.each do |locale| %>
  							<% if locale != I18n.locale %>
  								<li><%= link_to t("app.language.#{locale}"), params.merge(:locale => locale) %></li>
  							<% end %>
  						<% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
      <div class="content">
        <div class="row">
           <div class="span12">
							<% flash.each do |key, msg| %>
								<div class="alert <%= flash_translation(key) %> fade in">
									<a href="#" data-dismiss="alert" class="close">Ã—</a>
									<%= msg %>
								</div>
							<% end %>

              <div class="page-header">
                <h1><%= yield(:title) %></h1>
              </div>

							<%= yield %>
            </div>
          </div>
        </div><!--/row-->
      </div><!--/content-->
    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
		</script>

  </body>
</html>
