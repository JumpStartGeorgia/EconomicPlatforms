<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>
	  <%= include_gon %>
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
    <!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
    <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon2.ico', :rel => 'shortcut icon' %>
  </head>
  <body>
		  <div class="navbar navbar-fixed-top">
		    <div class="navbar-inner">
		      <div class="container">
		        <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
		          <span class="icon-bar"></span>
		          <span class="icon-bar"></span>
		          <span class="icon-bar"></span>
		        </a>
	          <%= link_to(t('app.common.app_name'), root_path(:locale => I18n.locale),:class=>"brand font")%>
		        <div class="container nav-collapse">
		          <ul class="nav">
		            <% if @political_parties_nav && !@political_parties_nav.empty? %>
		            <li class="dropdown">
		              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
		                    <%= t('app.common.political_party')%>
		                    <b class="caret"></b>
		              </a>
		              <ul class="dropdown-menu">
		                <% @political_parties_nav.each do |pol| %>
		                <li><%= link_to pol.name, party_path(pol.permalink)%></li>
		                <% end %>
		              </ul>
		            </li>
		            <% end %>
		            <% if @economic_categories_nav && !@economic_categories_nav.empty? %>
		            <li class="dropdown">
		              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
		                    <%= t('app.common.economic_category')%>
		                    <b class="caret"></b>
		              </a>
		              <ul class="dropdown-menu">
		                <% @economic_categories_nav.each do |ec| %>
		                <li><%= link_to ec.name, category_path(ec.permalink)%></li>
		                <% end %>
		              </ul>
		            </li>
		            <% end %>
		            <% if user_signed_in? %>
				          <li class="dropdown">
				            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
				                  <%= current_user.email %>
				                  <b class="caret"></b>
				            </a>
				            <ul class="dropdown-menu">
						          <li>
					 		         <%= link_to t('.admin'), admin_path %>
											</li>
						          <li>
					 		         <%= link_to t('.sign_out'), destroy_user_session_path, :method => :delete %>
											</li>
				            </ul>
				          </li>
		            <% end %>
		          </ul>

		          <ul class="nav pull-right">
								<% I18n.available_locales.each do |locale| %>
									<% if locale != I18n.locale %>
										<li><%= link_to t("app.language.#{locale}"), params.merge(:locale => locale) %></li>
									<% end %>
								<% end %>
		          </ul>
		        </div><!--/.nav-collapse -->
		      </div>
		    </div>
		  </div>

		<div id="wrapper">
		  <div class="container">
		    <div class="content">
		      <div class="row">
		         <div class="span12">
								<% flash.each do |key, msg| %>
									<div class="alert <%= flash_translation(key) %> fade in">
										<a href="#" data-dismiss="alert" class="close">Ã—</a>
										<%= msg %>
									</div>
								<% end %>

		            <div class="page-header row">
									<div class="span9">
										<% if content_for?(:title) %>
				              <h1>
												<%= yield(:title) %>
											</h1>
										<% else %>
												&nbsp;
										<% end %>
									</div>
									<div id="social_links" class="span3">
		                <ul class="nav nav-pills">
											<li class="f">
												<%= link_to(image_tag("facebook.png", :height => "27"),
															"http://www.facebook.com/share.php?u=#{request.protocol}#{request.host_with_port}#{request.fullpath}",
															:title => "facebook",	:target => "_blank") %>
											</li>
											<li class="t">
												<%= link_to(image_tag("twitter.png", :height => "27"),
															"https://twitter.com/share", :title => "twitter",
															:target => "_blank") %>
											</li>
										</ul>
									</div>
		            </div>

								<%= yield %>
		          </div>
		        </div>
		      </div><!--/row-->
		    </div><!--/content-->
		  </div> <!-- /container -->
      <div class="push"><!--//--></div>
    </div><!--/wrapper-->


    <footer class="clear">
			<div id="left">&nbsp;</div>
		  <div id="middle">
				<ul>
					<li>
						<%= link_to t('app.common.home'), root_path %>
					</li>
					<li class="spacer">|</li>
					<li>
						<%= link_to t('app.common.about'), about_path %>
					</li>
					<li class="spacer">|</li>
					<li>
						<%= link_to t('app.common.methodology'), methodology_path %>
					</li>
				</ul>
			</div>
			<div id="right">&copy; 2012</div>
    </footer>

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
		<%= use_tinymce_link %>
		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
		</script>

	<% if Rails.env.production? %>
		<!-- google analytics -->
		<script type="text/javascript">
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-12801815-10']);
			_gaq.push(['_setDomainName', 'econpolicyfact.ge']);
			_gaq.push(['_setAllowLinker', true]);
			_gaq.push(['_trackPageview']);
			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		</script>
	<% elsif Rails.env.staging? %>
		<!-- google analytics -->
		<script type="text/javascript">
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-12801815-9']);
			_gaq.push(['_trackPageview']);
			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();
		</script>
	<% end %>

  </body>
</html>
