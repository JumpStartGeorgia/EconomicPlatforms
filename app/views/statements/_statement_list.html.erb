<% if statements && !statements.empty? %>
  <% statements.each do |statement| %>
		<div class="statement_summary">
			<h3>
				<%= l statement.date_made, :format => :long %>
				<% if type == Statement::TYPE[0] %>
					<%= link_to t('.view_statement'),
						political_party_statement_path(:political_party_id => type_id, :id => statement.id),
						:class => 'btn btn-mini' %>
				<% elsif type == Statement::TYPE[1] %>
					<%= link_to t('.view_statement'),
						economic_category_statement_path(:economic_category_id => type_id, :id => statement.id),
						:class => 'btn btn-mini' %>
				<% elsif user_signed_in? && can?(:manage, Statement) %>
					<%= link_to t('.view_statement'),
						statement_path(:id => statement.id),
						:class => 'btn btn-mini' %>
				<% end %>
			</h3>
      <% if user_signed_in? && can?(:manage, Statement) %>
				<p>
			    <%= link_to t('app.buttons.edit'),
			                edit_statement_path(statement), :class => 'btn btn-mini' %>
			    <%= link_to t('app.buttons.delete'),
			                statement_path(statement),
			                :method => :delete,
			                :confirm => t('.confirm', :default => t("app.buttons.confirm")),
			                :class => 'btn btn-mini btn-danger' %>
				</p>
      <% end %>
			<div class="row">
				<% if type == Statement::TYPE[0] %>
					<div class="span4">
						<p>
							<strong><%= "#{t('app.common.ec_category')}:"%></strong>
							<%= statement.economic_category.name %>
						</p>
					</div>
				<% elsif type == Statement::TYPE[1] %>
					<div class="span4">
						<p>
							<strong><%= "#{t('app.common.pol_party')}:"%></strong>
							<%= statement.political_party.name %>
						</p>
					</div>
				<% elsif user_signed_in? && can?(:manage, Statement) %>
					<div class="span4">
						<p>
							<strong><%= "#{t('app.common.pol_party')}:"%></strong>
							<%= statement.political_party.name %>
						</p>
					</div>
					<div class="span4">
						<p>
							<strong><%= "#{t('app.common.ec_category')}:"%></strong>
							<%= statement.economic_category.name %>
						</p>
					</div>
				<% end %>
				<div class="span4">
					<p>
						<strong><%= "#{t('app.common.author')}:"%></strong>
						<%= statement.author %>
					</p>
				</div>
				<div class="span4">
					<p>
						<strong><%= "#{t('app.common.source')}:"%></strong>
						<%= statement.source %>
					</p>
				</div>
			</div>
			<div>
				<%= simple_format statement.statement_made, {}, :sanitize => false %>
			</div>
		</div>
	<% end %>
<% end %>
