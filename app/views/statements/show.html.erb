<%- model_class = Statement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<p>
  <strong><%= t('app.common.date_made') %>:</strong>
  <%= l @statement.date_made %>
</p>

<p>
  <strong><%= t('app.common.pol_party') %>:</strong>
  <%= @statement.political_party.name %>
</p>

<p>
  <strong><%= t('app.common.ec_category') %>:</strong>
  <%= @statement.economic_category.name %>
</p>

<p>
  <strong><%= t('app.common.statement') %>:</strong>
  <%= @statement.statement %>
</p>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              statements_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_statement_path(@statement), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              statement_path(@statement),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
  <%= link_to t('app.buttons.admin'), admin_path,
  :class => 'btn' %>
</div>
