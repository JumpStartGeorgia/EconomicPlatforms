<%- model_class = Statement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date_made) %>:</strong></dt>
  <dd><%= @statement.date_made %></dd>
  <dt><strong><%= model_class.human_attribute_name(:political_party_id) %>:</strong></dt>
  <dd><%= @statement.political_party_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:economic_category_id) %>:</strong></dt>
  <dd><%= @statement.economic_category_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              statements_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_statement_path(@statement), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              statement_path(@statement),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
