<% title t('.title', :political_party => @political_party.name) %>

<% if @statements.nil? || @statements.empty? %>
	<p>
		<%= t('.no_statements', :political_party => @political_party.name) %>
	</p>
<% else %>
	<%= render :partial => "statements/statement_list",
			:locals => {:statements => @statements, :type => Statement::TYPE[0], :type_id => @political_party.permalink}%>
<% end %>

<% if user_signed_in? && can?(:manage, Statement) %>
<div class="form-actions">
<%= link_to t('app.buttons.new'),
            new_statement_path,
            :class => 'btn btn-primary' %>
<%= link_to t('app.buttons.admin'), admin_path,
:class => 'btn' %>
</div>
<% end %>
