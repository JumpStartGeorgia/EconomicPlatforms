<%= form_for @statement, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :date_made, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date_made, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :political_party_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :political_party_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :economic_category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :economic_category_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                statements_path, :class => 'btn' %>
  </div>
<% end %>
