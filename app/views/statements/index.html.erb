<h1>Listing statements</h1>

<table>
  <tr>
    <th>Date made</th>
    <th>Statement</th>
    <th>Source</th>
    <th>Author</th>
    <th>Political party</th>
    <th>Economic category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statements.each do |statement| %>
  <tr>
    <td><%= statement.date_made %></td>
    <td><%= statement.statement %></td>
    <td><%= statement.source %></td>
    <td><%= statement.author %></td>
    <td><%= statement.political_party_id %></td>
    <td><%= statement.economic_category_id %></td>
    <td><%= link_to 'Show', statement %></td>
    <td><%= link_to 'Edit', edit_statement_path(statement) %></td>
    <td><%= link_to 'Destroy', statement, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

