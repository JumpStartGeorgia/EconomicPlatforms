<%= semantic_form_for(@policy_brief) do |f| %>
	<%= f.error_messages %>


	<%= f.inputs do %>
	  <%= f.input :election_id, :as => :select, :collection => Election.all, :include_blank => false %>
		<%= f.input :political_party, :collection => Election.first.political_parties %>
		<%= f.input :economic_category %>
	<% end %>

  <% @policy_brief.policy_brief_translations.sort{|x,y| x.locale <=> y.locale}.each do |trans| %>
		<%= f.fields_for :policy_brief_translations, trans do |translation| %>

			<div id="form-<%= trans.locale %>" class="multilanguage">
				<h3><%= t("app.language.#{trans.locale}") %></h3>

				<%= translation.input :analysis, :as => :text, :input_html => {:rows => 15} %>
				<%= translation.hidden_field :locale , :value => trans.locale %>
			</div>

		<% end %>
	<% end %>

	<%= f.inputs do %>
		<%= f.input :is_public, :as => :radio %>
	<% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
	  <%= f.submit nil, :class => 'btn btn-warning', :type => :reset, :value => t('app.buttons.reset'), :name => :reset %>
	  <%= link_to t('app.buttons.cancel'), policy_briefs_path, :class => 'btn btn-mini btn-warning' %>
  </div>
<% end %>
