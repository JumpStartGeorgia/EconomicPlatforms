<% title t('category.policy_brief.title', :economic_category => @economic_category.name) %>
<% sub_title t('category.policy_brief.secondary_title', :political_party => @political_party.name) %>

<div class="row">
	<div class="span9">
		<h2><%= t('category.policy_brief.secondary_title', :political_party => @political_party.name) %></h2>

		<%= simple_format_no_tags @policy_brief.analysis, {}, :sanitize => false %>

		<%= render :partial => 'comments/list', :locals => {:commentable_type => 'policy_brief', :commentable_id => @policy_brief.id} %>
    <%= render :partial => 'comments/form', :locals => {:commentable_type => 'policy_brief', :commentable_id => @policy_brief.id} %>

	</div>

	<% if params[:format] != "pdf" %>
		<%= render :partial => "category/well" %>
	<% end %>
</div>

<% if user_signed_in? && can?(:manage, Platform) %>
<div class="form-actions">
  <%= link_to t('app.buttons.edit'),
              edit_policy_brief_path(@policy_brief), :class => 'btn' %>
  <%= link_to t('app.buttons.delete'),
              policy_brief_path(@policy_brief),
              :method => 'delete',
              :confirm => t('app.buttons.confirm'),
              :class => 'btn btn-danger' %>
  <%= link_to t('app.buttons.admin'), admin_path,
  :class => 'btn' %>
</div>
<% end %>
